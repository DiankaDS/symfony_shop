<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}ShopMaster!{% endblock %}</title>
    {% block stylesheets %}
        <script src="/js/app.js"></script>
        <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">

        <link rel="stylesheet" href="{{ asset('css/categories.css') }}">
    {% endblock %}
</head>
<body>
<div class="container">
    <div class="navbar">
        <nav class="navbar navbar-inverse">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('home') }}"> Home</a>
            </div>
            <div class="collapse navbar-collapse" id="app-navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('categories') }}"> Categories</a></li>
                    <li><a href="{{ path('product') }}"> Products</a></li>
                </ul>

                <ul class="nav navbar-nav navbar-right">

                    {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('profile') }}">{{ app.user.username }}</a></li>
                        <li><a href="{{ path('security_logout') }}">Logout</a></li>
                    {% else %}
                        <li><a href="{{ path('security_login') }}">Sign in</a></li>
                        <li><a href="{{ path('user_registration') }}">Sign up</a></li>
                    {% endif %}

                </ul>
            </div>
        </nav>
    </div>

    {% block body %}
    <div class="col-md-2" id="sidebar">
        {% block sidebar %}
            <ul class="nav nav-list">
                {#<li><a href="{{ path('home') }}"><span class="glyphicon glyphicon-home"></span> Home</a></li>#}
                {#<li><a href="/"><span class="glyphicon glyphicon-asterisk"></span> Some Links</a></li>#}

                <li><a href="/"><span class="glyphicon glyphicon-shopping-cart"></span> My basket</a></li>
                <li><a href="/"><span class="glyphicon glyphicon-briefcase"></span> My orders</a></li>
                <li><a href="/"><span class="glyphicon glyphicon-book"></span> Guest book</a></li>
                <hr />
                <li><a href="/"><span class="glyphicon glyphicon-bell"></span> Promotions</a></li>
                <li><a href="/"><span class="glyphicon glyphicon-gift"></span> Gifts</a></li>
                <li><a href="/"><span class="glyphicon glyphicon-fire"></span> Auction</a></li>
            </ul>
        {% endblock %}
    </div>

    <div class="col-md-10" id="content">
        {% block content %}{% endblock %}
    </div>
    {% endblock %}
</div>
</body>
</html>
