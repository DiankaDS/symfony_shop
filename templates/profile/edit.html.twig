{% extends 'base.html.twig' %}

{% block content %}
    <div class="col-md-2"></div>
    <div class="row">
        <div class="col-sm-5">
            <div class="well">
                {{ form_start(form) }}
                <fieldset>
                    <legend><i class="fa fa-lock" aria-hidden="true"></i> Edit Profile</legend>
                    <div class="form-group">{{ form_row(form.username) }}</div>
                    <div class="form-group">{{ form_row(form.email) }}</div>
                    <div class="form-group">{{ form_row(form.name) }}</div>
                    <div class="form-group">{{ form_row(form.phone) }}</div>
                    <div class="form-group">{{ form_row(form.card) }}</div>

                    <button type="submit" class="btn btn-primary">Save</button>
                </fieldset>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
