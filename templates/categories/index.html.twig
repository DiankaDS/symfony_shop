{% extends 'base.html.twig' %}

{% block content %}
    <div class="row" id="myBooks">
        {% for category in categories %}
        <div class="col-md-4">
            <div class="row" id="box">
                <a href="/categories/{{ category.id }}">
                <div class="thumbnail text-center">
                    <img id="category_photo" src="categories/{{ category.photo }}" alt="" class="img-responsive">
                    <div class="caption" id="category_caption">
                        <h4>{{ category.name }}</h4>
                    </div>
                </div>
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}
