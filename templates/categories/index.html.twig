{% extends 'base.html.twig' %}

{% block sidebar %}
    <ul class="nav nav-list">
        {% for category in categories %}
        <li>
            <a data-toggle="collapse" href="#collapse{{ category.id }}"><span class="caret"></span> {{ category.name }}</a>

            <ul class="panel-collapse collapse" id="collapse{{ category.id }}">
                <li><a href="#"> Subcategory 1 </a></li>
                <li><a href="#"> Subcategory 2 </a></li>
            </ul>
        </li>
        {% endfor %}
    </ul>
{% endblock %}

{% block content %}
    <div class="row" id="myBooks">
        {% for category in categories %}
        <div class="col-md-4">
            <div class="row" id="box">
                <a href="#">
                <div class="thumbnail text-center">
                    <img id="category_photo" src="categories/{{ category.photo }}" alt="" class="img-responsive">
                    <div class="caption" id="category_caption">
                        <h4>{{ category.name }}</h4>
                    </div>
                </div>
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}
